extends ../layouts/main.pug

block content
  .container
    h2.page-title Help to
    .announcements__wrapper.announcements-wrapper
      - for (let row of rows)
        .announcements-wrapper__card.announcements-card.card
          p.announcements-card__text #{row['description']}
          a.announcements-card__button-link(href="/announcements/" + row['id'])
            button.announcements-card__button.announcements-card-button(id='help-button') Help


