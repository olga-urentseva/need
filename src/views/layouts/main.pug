                li
                  a.header-wrapper-menu__link.header-wrapper-menu-link.menu-link(href='/signin') Sign in
                li
                  a.header-wrapper-menu__link.header-wrapper-menu-link.menu-link(href='/signup') Sign up
                li
                  a.header-wrapper-menu__link.header-wrapper-menu-link(href='#')
                    img.logout-icon(src='/logout.svg')
    main.content
      block content
    footer.footer
      .container
        .footer-wrapper.footer__wrapper
          .footer-wrapper__logo-column.footer-wrapper__logo-column.footer-wrapper__column
            a.footer-wrapper__logo-link(href='/')
              img.footer__logo-icon.logo-icon(src="/logo.svg", alt="Logo lifesaver")
              .header--logo-text.logo-text The Need
          .footer-wrapper__menu-column.footer-wrapper__column
            nav.footer-wrapper__menu.menu
              ul
                li
                  a.footer-wrapper-menu__link.footer-wrapper-menu-link.menu-link(href='/about') About
